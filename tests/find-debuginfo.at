AT_CHECK([env RPM_BUILD_DIR=${PWD} \
              RPM_BUILD_ROOT=${PWD} \
              RPM_PACKAGE_NAME=pkg \
              RPM_PACKAGE_VERSION=ver \
              RPM_PACKAGE_RELEASE=rel \
              RPM_ARCH=arch \
